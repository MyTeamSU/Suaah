@using Suaah.Data
@model IEnumerable<Suaah.Models.Hotel>
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "Index";

    var hotels = _context.Hotels.ToList();
}


<div class="text-center  m-2 mt-5 p-5 h">
    <h1>Hotels</h1>
</div>

@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
{
    <div class="m-2 mb-5">
        <a asp-action="Create" class="w-100 d-block btn btn-danger p-2">Create New Hotel</a>
    </div>
}

<form asp-action="Index" method="get">
    <div class="form-actions no-color text-center p-3">

        <input type="search" list="nName" name="hName" value="@ViewData["hName"]" placeholder="Hotel Name" class="p-2" />
        <datalist id="nName">
            @foreach (var item in hotels)
            {
                <option>@item.Name</option>
            }
        </datalist>

        <input type="text" name="hAddress" value="@ViewData["hAddress"]" placeholder="Hotel Address" class="p-2" />
        <input type="text" name="hEmail" value="@ViewData["hEmail"]" placeholder="Hotel Email" class="p-2" />
        <input type="text" name="hPhoneNumber" value="@ViewData["hPhoneNumber"]" placeholder="Hotel Phone" class="p-2" />
        <input type="text" name="hDescription" value="@ViewData["hDescription"]" placeholder="Hotel Description" class="p-2" />
        <input type="text" name="hStars" value="@ViewData["hStars"]" placeholder="Hotel Stars" class="p-2" />

        <input type="submit" value="-  Search  -" class="btn btn-outline-danger p-2" />
        <br />

        <a asp-action="Index" class="btn btn-outline-info my-4">Back to Full List</a>

    </div>
</form>


<table class="table table-hover table-striped ">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-nameOrder="@ViewData["NameSortParm"]"
                   asp-route-hName="@ViewData["hName"]" asp-route-hAddress="@ViewData["hAddress"]"
                   asp-route-hStars="@ViewData["hStars"]"
                   asp-route-order="name" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-addOrder="@ViewData["AddSortParm"]"
                   asp-route-hName="@ViewData["hName"]" asp-route-hAddress="@ViewData["hAddress"]"
                   asp-route-hStars="@ViewData["hStars"]"
                   asp-route-order="add" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.Address)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                <a asp-action="Index" asp-route-addOrder="@ViewData["AddSortParm"]"
                   asp-route-hName="@ViewData["hName"]" asp-route-hAddress="@ViewData["hAddress"]"
                   asp-route-hStars="@ViewData["hStars"]"
                   asp-route-order="stars" asp-route-ordersort="@ViewBag.ordersort">
                    @Html.DisplayNameFor(model => model.Stars)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.Stars)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<style>
    .h {
        background-color: black;
        color: aliceblue;
    }
</style>