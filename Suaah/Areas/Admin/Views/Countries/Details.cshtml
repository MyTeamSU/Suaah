@model Suaah.Models.Country

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Airport> airports = ViewBag.airports;

}

<h1>Details</h1>

<div>
    <h4>Country</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPath)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.PhotoPath" class="img-fluid img-thumbnail"/>
        </dd>
    </dl>
</div>
@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
{
    <h1 style="text-align:center; margin-top:20px; ">Airports</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                        Name
                </th>
                <th>
                        Country
                </th>
                <th>
                   Description
    </th>
    <th>
            City
    </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in airports)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Country.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.City
                </td>
                
            </tr>
        }
    </tbody>
    </table>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
