@model Suaah.Models.Flight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartingGate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartingGate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArriveGate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArriveGate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfStops)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfStops)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AirlineCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airline.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartingAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartingAirport.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivingAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivingAirport.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightClasses)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (FlightsClasses item in Model.FlightClasses)
                {
                    <li> @item.FlightClass.Class</li>
                }
            </ul>
        </dd>

    </dl>
</div>
<div>
    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> <span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
