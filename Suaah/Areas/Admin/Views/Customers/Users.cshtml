@using Microsoft.AspNetCore.Identity
@using Suaah.Data
@model IEnumerable<IdentityUser>
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>


<p>
    <a id="register" asp-area="Identity" asp-page="/Account/Register">Create New</a>
</p>
<form method="get" asp-action="Users">
<div class="row">
    <div class="col-1">
        <label class="control-label">Search</label>
    </div>
    <div class="col-2">
        <input name="search" class="form-control" value="@ViewBag.search" />
    </div>
    <div class="col-1">
        <label class="control-label">Type of Search</label>
    </div>
    <div class="col-2">
        <select name="type" class="form-control form-select" asp-items="@ViewBag.types" ></select>
    </div>
    <div class="col-1">
        <label class="control-label">Role</label>
    </div>
    <div class="col-2">
        <select name="role" class="form-control form-select" asp-items="@ViewBag.roles" >
            <option value="">Select All</option>
        </select>
    </div>
    <input name="ordersort" id="ord" value="@ViewBag.ordersort" hidden/>
    <input name="order" value="@ViewBag.order" hidden/>
     <partial name="_Pagination" />

    <div class="offset-1 col-1">
        <input type="submit" class="btn btn-secondary" onclick="go();"/>
        </div>
    
</div>
<div class="row m-2">
        <a class="btn btn-danger offset-5 col-2" asp-action="Users">Back to full list</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                 <a asp-route-pageSize="@ViewBag.PageSize" asp-route-pageNumber="@ViewBag.PageNumber" asp-action="Users" asp-route-order="name" asp-route-ordersort="@ViewBag.ordersort" asp-route-search="@ViewBag.search" asp-route-type="@ViewBag.types.SelectedValue" asp-route-role="@ViewBag.types.SelectedValue">
                @Html.DisplayNameFor(model => model.UserName)
                </a>
            </th>
            <th>
                 <a asp-route-pageSize="@ViewBag.PageSize" asp-route-pageNumber="@ViewBag.PageNumber" asp-action="Users" asp-route-order="email" asp-route-ordersort="@ViewBag.ordersort" asp-route-search="@ViewBag.search" asp-route-type="@ViewBag.types.SelectedValue" asp-route-role="@ViewBag.types.SelectedValue">
                @Html.DisplayNameFor(model => model.Email)
                </a>
            </th>
            <th>
                 <a asp-route-pageSize="@ViewBag.PageSize" asp-route-pageNumber="@ViewBag.PageNumber" asp-action="Users" asp-route-order="phone" asp-route-ordersort="@ViewBag.ordersort" asp-route-search="@ViewBag.search" asp-route-type="@ViewBag.types.SelectedValue" asp-route-role="@ViewBag.types.SelectedValue">
                @Html.DisplayNameFor(model => model.PhoneNumber)
                </a>
            </th>
            <th>
                 <a asp-route-pageSize="@ViewBag.PageSize" asp-route-pageNumber="@ViewBag.PageNumber" asp-action="Users" asp-route-order="role" asp-route-ordersort="@ViewBag.ordersort" asp-route-search="@ViewBag.search" asp-route-type="@ViewBag.types.SelectedValue" asp-route-role="@ViewBag.types.SelectedValue">
                Role
                </a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @{
                        var roleId = _context.UserRoles.FirstOrDefault(u => u.UserId == item.Id).RoleId;
                        var role = _context.Roles.FirstOrDefault(u => u.Id == roleId).Name;
                    }

                    @role
                </td>
                <td>
                   
                    @{
                        if (User.IsInRole(SD.Role_Manager))
                        {
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" asp-route-id="@item.Id">Edit |</a>
                        }
                        else if (User.IsInRole(SD.Role_Admin) && role == "Customer")
                        {
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" asp-route-id="@item.Id">Edit |</a>
                        }
                        else
                        {
                             <input type="submit"  value="Edit" disabled /> <span>|</span>
                        }

                        if (role == "Customer")
                        {
                            <a asp-action="Details" asp-route-id="@item.Id">Details |</a>
                        }
                        else
                        {
                            <input type="submit"  value="Details" disabled /> <span>|</span>
                        } 
                        
                        if (role == "Customer")
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                        else if(role == "Admin" && User.IsInRole(SD.Role_Manager))
                        {
                             <a asp-action="DeleteAdmin" asp-route-id="@item.Id">Delete</a>
                        }
                        else
                        {
                             <input type="submit"  value="Delete" disabled />  
                        }
                    }
                   
                </td>
            </tr>
        }
    </tbody>
</table>
