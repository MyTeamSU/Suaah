@model IEnumerable<Suaah.Models.Airline>
@using Suaah.Data
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "Index";
    var countries = _context.Countries.ToList();
}

<div class="row">
<h1 class="text-center bg-black m-2 p-3 text-white col-12">Airlines</h1>
</div>
@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
{
<div class="row m-2">
        <a class="btn btn-danger col-12" asp-action="Create">Create New Airline</a>

</div>

}
<form method="get" asp-action="Index" class="m-1">
    <div class="row">
        <div class="col-1">
            <label class="control-label">Search</label>
        </div>
        <div class="col-2">
            <input name="search" class="form-control" value="@ViewBag.search" />
        </div>
        <div class="col-1">
            <label class="control-label">Type of Search</label>
        </div>
        <div class="col-2">
            <select name="type" class="form-control form-select" asp-items="@ViewBag.types"></select>
        </div>

        <input name="ordersort" id="ord" value="@ViewBag.ordersort" hidden />
        <input name="order" value="@ViewBag.order" hidden />

          
     <partial name="_Pag" />
    </div>
    <div class="row m-2">
            <input type="submit" class="btn btn-secondary offset-5 col-2" onclick="go();" />

    </div>
    <div class="row m-2">
        <a class="btn btn-danger offset-5 col-2" asp-action="Index">Back to full list</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-pageSize="@ViewBag.PageSize" asp-route-pageNumber="@ViewBag.PageNumber" asp-action="Index" asp-route-order="name" asp-route-ordersort="@ViewBag.ordersort" asp-route-search="@ViewBag.search" asp-route-type="@ViewBag.types.SelectedValue">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th>
                <a asp-route-pageSize="@ViewBag.PageSize" asp-route-pageNumber="@ViewBag.PageNumber" asp-action="Index" asp-route-order="country" asp-route-ordersort="@ViewBag.ordersort" asp-route-search="@ViewBag.search" asp-route-type="@ViewBag.types.SelectedValue">
                    @Html.DisplayNameFor(model => model.CountryId)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                
                <td>
                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Code">Edit</a> <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Code"> Delete </a>  <span>|</span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Code">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        function go() {
            if (document.getElementById("ord").value == "desc") {
                document.getElementById("ord").value = "asc";
            }
            else
                document.getElementById("ord").value = "desc";
        }
    </script>
}
