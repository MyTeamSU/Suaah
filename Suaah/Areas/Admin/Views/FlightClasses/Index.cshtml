@model IEnumerable<Suaah.Models.FlightClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form method="get" asp-action="Index">
<div class="row">
    <div class="col-1">
        <label class="control-label">Search</label>
    </div>
    <div class="col-2">
        <input name="name" class="form-control" value="@ViewBag.name" />
    </div>
    <input name="order" id="ord" value="@ViewBag.order" hidden/>
     <partial name="_Pagination" />

    <div class="offset-1 col-1">
        <input type="submit" class="btn btn-secondary" onclick="go();"/>
        </div>
    
</div>
<div class="row m-2">
        <a class="btn btn-danger offset-5 col-2" asp-action="Index">Back to full list</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-pageSize="@ViewBag.PageSize" asp-route-pageNumber="@ViewBag.PageNumber" asp-action="Index" asp-route-order="@ViewBag.order" asp-route-name="@ViewBag.name">
                @Html.DisplayNameFor(model => model.Class)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
function go() {
    if (document.getElementById("ord").value == "desc") {
        document.getElementById("ord").value = "asc";
    }
    else
        document.getElementById("ord").value = "desc";
}
    </script>
}
