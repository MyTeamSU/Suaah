@model IEnumerable<FlightBooking>
<form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Your Flight Reservation
                        </div>
                        <div class="col-6 text-end">
                            <a asp-action="Index" class="btn btn-outline-info btn-sm">Add addtional Booking</a>
                        </div>
                    </div>
                    <div class="card-body">
                        @foreach(var item in Model)
                        {
                            <div class="row">
                                <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                    <p><strong>From:</strong> @item.Flight.DepartingAirport.City ,@item.Flight.DepartingAirport.Country.Name</p>
                                    <p>Airport: @item.Flight.DepartingAirport.Name</p>
                                    <p><strong>To:</strong> @item.Flight.ArrivingAirport.City ,@item.Flight.ArrivingAirport.Country.Name</p>
                                    <p>Airport: @item.Flight.ArrivingAirport.Name</p>
                                    <p><strong>Class:</strong> @item.FlightClass.Class</p>
                                    <p><strong>Airline:</strong> @item.Flight.Airline.Name</p>

                                </div>
                                <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                    <div class="col-4 text-md-right" style="padding-top:5px;">
                                        <h6><strong>@item.FlightClass.Flights.FirstOrDefault(f=>f.FlightId==item.FlightId).Price<span class="text-muted">x</span> @item.NumberOfSeats </strong></h6>
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-6">
                                        <div class="float-right mx-1">
                                            <a  asp-action="plus" asp-route-id="@item.Booknum" class="btn btn-primary">
                                                <i class="bi bi-plus"></i>
                                            </a>
                                        </div>
                                        <div class="float-right mx-1">
                                            <a  asp-action="mins" asp-route-id="@item.Booknum" class="btn btn-danger">
                                               <i class="bi bi-dash"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-2 col-sm-4 col-lg-2 text-right">
                                        <a  asp-action="remove" asp-route-id="@item.Booknum" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }
                        <div class="row">
                            <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info"> Total (USD)</span>
                                        <strong class="text-info">$ <span id="txtOrderTotal">@ViewBag.total</span></strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="card-footer row">

                                    <a asp-action="FlightSummary" class="btn btn-success form-control">Summary</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
