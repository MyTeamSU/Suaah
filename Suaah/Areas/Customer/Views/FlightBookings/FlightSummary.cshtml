
@model FlightBookingHeader
<form asp-action="FlightSummary">
    <input hidden asp-for="CustomerID" value="@Model.CustomerID" />
    <input hidden asp-for="OrderTotal" value="@Model.OrderTotal" />
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Order Summary
                        </div>
                        <div class="col-6 text-end">
                            <a asp-action="BookingList" class="btn btn-outline-info btn-sm">Back to Bookings</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-6 pb-4">
                                    <div class="row">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-info">PickUp Details:</span>
                                        </h4>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Name</label>
                                        </div>
                                        <div class="col-9">
                                            <p>@Html.DisplayFor(f=>f.Customer.Name)</p>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Phone</label>
                                        </div>
                                        <div class="col-9">
                                            <p>@Html.DisplayFor(f=>f.Customer.IdentityUser.PhoneNumber)</p>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-9">
                                            <p>@Html.DisplayFor(f=>f.Customer.IdentityUser.Email)</p>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Passport Number</label>
                                        </div>
                                        <div class="col-9">
                                            <p>@Html.DisplayFor(f=>f.Customer.PassportNumber)</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-5 offset-lg-1">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                    @foreach (var item in @Model.FlightBookings)
                                    {
                                     
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Html.DisplayFor(e=>item.FlightClass.Class)</h6>
                                                    <p><small class="text-muted">From: @Html.DisplayFor(e=>item.Flight.DepartingAirport.City) ,@Html.DisplayFor(e=>item.Flight.DepartingAirport.Country.Name)</small>
                                                    <small class="text-muted">To: @Html.DisplayFor(e=>item.Flight.ArrivingAirport.City) ,@Html.DisplayFor(e=>item.Flight.ArrivingAirport.Country.Name)</small></p>
                                                   <p> <small class="text-muted">Airline: @Html.DisplayFor(e=>item.Flight.Airline.Name)</small></p>
                                                   <p> <small class="text-muted">Seats: @Html.DisplayFor(e=>item.NumberOfSeats)</small></p>
                                                </div>
                                                <span class="text-muted">$ @Html.DisplayFor(e=>item.TotalPrice)</span>
                                            </li>   
                                    }

                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <small class="text-info">Total (USD)</small>
                                            <strong class="text-info">$@Model.OrderTotal</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12 col-md-4">

                                    <button type="submit" value="Place Order" class="btn btn-success form-control">Place Order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</form>