@model IEnumerable<Suaah.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@foreach (var item in Model)
{
    foreach (var rooms in item.HotelRooms)
    {
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class=" row container">
                    <div class="col-6">
                        <h3> @item.Name Hotel</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Room</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Room Type</label>
                                </div>
                                <div class="col-9">
                                    <input class="form-control text-danger text-center" value="@rooms.Description"@*value="@rooms.Type"*@ readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Price</label>
                                </div>
                                <div class="col-9">
                                    <input class="form-control text-danger text-center" value="@rooms.Price" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label title="You Can Cancel Booking Before ... Hours">Cancel Before{Hours}</label>
                                </div>
                                <div class="col-9">
                                    <input class="form-control text-danger text-center" value=" @rooms.CancelBeforeHours" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Description</label>
                                </div>
                                <div class="col-9">
                                    <textarea class="form-control text-danger text-center" asp-for="@rooms.Description" readonly ></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="col-12 col-lg-6 pb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-info">Services</span>
                        </h4>
                        @foreach (var item2 in rooms.Services)
                        {
                            <ul class="list-group mb-3">

                                <li class="list-group-item d-flex justify-content-between">
                                    <div>
                                        <h6 class="my-0 text-danger">> @item2.Services.Name</h6>
                                    </div>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                @*<div class="col-sm-12 col-lg-4 col-12 offset-lg-8 offset-md-6 ">*@
                    <a class="btn btn-primary form-control" asp-area="Customer" asp-action="Create" asp-route-roomId="@rooms.Id">Reservation</a>
               @* </div>*@
            </div>
        </div>


        <hr />
        <hr />
    }
    <br>
}

